swiper {
  width: 100%;
  height: 300rpx;
}
swiper swiper-item {
  width: 100%;
  height :100%;
  line-height: 300rpx;
  text-align: center;
  background-color: red;
}
swiper swiper-item:first-child {
  background-color: blue;
}
swiper swiper-item:last-child {
  background-color: green
}
.switch-container {
  height: 100rpx;
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  margin-top: 20rpx;
}
.switch-container text {
  flex: auto;
}
.slider-container {
  margin-top: 40rpx;
}
.slider-container text:last-of-type {
  float: right;
}